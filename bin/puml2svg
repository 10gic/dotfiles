#!/bin/bash

if [ ! "$1" ] ; then
    echo 'Usage: puml2svg file1 file2 ...'
    exit
fi

typeset input_file
while [ "$1" ] ; do
    input_file="$1"
    output_file="${input_file%.puml}.svg"
    echo "Converting $input_file to $output_file"
    java -jar "${HOME}/dotfiles/javalib/plantuml.1.2020.22.jar" -tsvg "$input_file"
    shift
done
